<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/WelcomeScreenTheme.Light"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/first_title"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:textSize="30sp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_hidden"
        android:padding="20dp"
        style="@style/WelcomeScreenTheme.Light"
        android:id="@+id/hidden" />
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_international"
        android:padding="20dp"
        style="@style/WelcomeScreenTheme.Light"
        android:id="@+id/international"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <android.support.v7.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_not_contact"
        android:id="@+id/not_in"
        android:padding="20dp"
        style="@style/WelcomeScreenTheme.Light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>
